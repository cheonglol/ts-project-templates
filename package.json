{
  "name": "money-opus",
  "version": "1.0.0",
  "description": "",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/cheonglol/money-opus.git"
  },
  "license": "ISC",
  "author": "",
  "type": "commonjs",
  "main": "dist/index.js",
  "scripts": {
    "test": "jest --config jest.config.js",
    "test:write": "npm run test > testoutput.txt 2>&1",
    "test:verbose": "cross-env TEST_LOG_MODE=verbose jest --config jest.config.js",
    "test:quiet": "cross-env TEST_LOG_MODE=quiet jest --config jest.config.js",
    "test:json": "node -e \"require('fs').mkdirSync('./.temp', { recursive: true })\" && jest --json --outputFile=./.temp/jest-output.json --config jest.config.js",
    "prepare": "husky install",
    "build": "tsc",
    "typecheck": "tsc --noEmit",
    "check": "npx eslint --fix \"**/*.{js,jsx,ts,tsx}\" && npx prettier --write \"**/*.{js,jsx,ts,tsx,json,md,yml,yaml}\" && tsc --noEmit && echo \"lint & tsc check passed\"",
    "start": "ts-node -r tsconfig-paths/register src/index.ts",
    "dev": "nodemon --exec ts-node -r tsconfig-paths/register src/index.ts",
    "updates": "ncu -u"
  },
  "dependencies": {
    "@fastify/middie": "^9.0.3",
    "@types/dotenv": "^8.2.3",
    "axios": "^1.9.0",
    "dotenv": "^16.5.0",
    "fastify": "^5.3.3",
    "husky": "^9.1.7",
    "node-cron": "^4.0.7",
    "zod": "^4.1.5"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.8.1",
    "@commitlint/config-conventional": "^19.8.1",
    "@types/jest": "^30.0.0",
    "@types/node": "^22.15.21",
    "@types/uuid": "^10.0.0",
    "@typescript-eslint/eslint-plugin": "^8.32.1",
    "@typescript-eslint/parser": "^8.32.1",
    "eslint": "^9.27.0",
    "eslint-config-prettier": "^10.1.5",
    "eslint-formatter-unix": "^8.40.0",
    "jest": "^30.1.2",
    "lint-staged": "^16.0.0",
    "nodemon": "^3.1.10",
    "prettier": "^3.5.3",
    "ts-jest": "^29.4.1",
    "ts-node": "^10.9.2",
    "ts-node-dev": "^2.0.0",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.32.1"
  }
}
